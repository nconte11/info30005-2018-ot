<h1>Browse</h1>
<div class="items">
    <% if(items.length > 0) { %>

    <% for (i = 0;i < items.length;i++){ %>
    <div class = "item" data-toggle="modal" data-target="#item-modal" data=<%items[i]%>>

        <img class='thumbnail' src= <%= items[i].img %>>

        <div class = "item-info">
            <p class = "item-desc"><%= items[i].quantity %> <%= items[i].item %></p>
            <p class = "item-price">$<%= items[i].price %></p>
        </div>

    </div>
    <% } %>
    <% } else { %>
    <h1> No items</h1>
    <% } %>
</div>

<div id="item-modal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Item Information</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="img-placeholder"></div>
            <p>Item: requires backend<span class="item-name"></span></p>
            <p>Price: requires backend<span class="item-price"></span></p>
            <p>Expiry: requires backend<span class="item-expiry"></span></p>
            <div class="modal-footer">
                <button type="button" class="btn btn-default">Add to Cart</button>
            </div>
        </div>
    </div>
</div>

<% include scripts.ejs %>

