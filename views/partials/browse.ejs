<h1>Browse</h1>
<div class="items">
    <% if(items.length > 0) { %>

    <% for (i = 0;i < items.length;i++){ %>
    <div class = "item" data-toggle="modal" data-target="#<%= items[i].item %>item-modal">

        <img class='thumbnail' src= <%= items[i].img %>>

        <div class = "item-info">
            <p class = "item-desc"><%= items[i].quantity %> <%= items[i].item %></p>
            <p class = "item-price">$<%= items[i].price %></p>
        </div>
    </div>

    <div id="<%= items[i].item %>item-modal" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Item Information</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <img class='thumbnail' src= <%= items[i].img %>>
                <p>Item: <%= items[i].quantity %> <%= items[i].item %></p>
                <p>Price: $ <%= items[i].price %></p>
                <p>Expiry: <%=items[i].expiry.getDate()%>/<%=items[i].expiry.getMonth()%>/<%=items[i].expiry.getFullYear()%></p>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default">Add to Cart</button>
                </div>
            </div>
        </div>
    </div>
    <% } %>
    <% } else { %>
    <h1> No items</h1>
    <% } %>
</div>


